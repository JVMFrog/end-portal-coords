<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EndPortalCoords" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffd0bcff</item>
        <item name="colorPrimaryVariant">#ff4a4458</item>
        <item name="colorOnPrimary">#ff381e72</item>
        <item name="colorPrimaryContainer">#ff4f378b</item>
        <item name="colorOnPrimaryContainer">#ffeaddff</item>
        <item name="colorPrimaryInverse">#ff6750a4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffccc2dc</item>
        <item name="colorSecondaryVariant">#ffccc2dc</item>
        <item name="colorOnSecondary">#ff332d41</item>
        <item name="colorSecondaryContainer">#ff4a4458</item>
        <item name="colorOnSecondaryContainer">#ffe8def8</item>
        <!-- Tertiary. -->
        <item name="colorTertiary">#ffefb8c8</item>
        <item name="colorOnTertiary">#ff492532</item>
        <item name="colorTertiaryContainer">#ff633b48</item>
        <item name="colorOnTertiaryContainer">#ffffd8e4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">#fff2b8b5</item>
        <item name="colorOnError">#ff601410</item>
        <item name="colorErrorContainer">#ff8c1d18</item>
        <item name="colorOnErrorContainer">#fff2b8b5</item>
        <item name="colorOutline">#ff938f99</item>
        <item name="android:colorBackground">#ff1c1b1f</item>
        <item name="colorOnBackground">#ffe6e1e5</item>
        <item name="colorSurface">#ff1c1b1f</item>
        <item name="colorOnSurface">#ffe6e1e5</item>
        <item name="colorSurfaceVariant">#ff49454f</item>
        <item name="colorOnSurfaceVariant">#ffcac4d0</item>
        <item name="colorSurfaceInverse">#ffe6e1e5</item>
        <item name="colorOnSurfaceInverse">#ff313033</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.EndPortalCoords">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="NextStepView" parent="Theme.EndPortalCoords">
        <item name="sv_selectedCircleColor">#ffeaddff</item>
        <item name="sv_selectedTextColor">#ff1d192b</item>
        <item name="sv_nextTextColor">#ff49454f</item>
        <item name="sv_nextStepCircleColor">#ff49454f</item>
        <item name="sv_nextStepLineColor">#ff49454f</item>
        <item name="sv_doneCircleColor">#ffeaddff</item>
        <item name="sv_doneTextColor">#ff1d192b</item>
        <item name="sv_doneStepLineColor">#ffeaddff</item>
        <item name="sv_doneStepMarkColor">#ff1d192b</item>
        <item name="sv_selectedStepNumberColor">#ffeaddff</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#222222</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_x512</item>
        <item name="postSplashScreenTheme">@style/Theme.EndPortalCoords</item>
    </style>
</resources>