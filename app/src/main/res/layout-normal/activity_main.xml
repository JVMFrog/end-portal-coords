<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="true"
            app:menu="@menu/toolbar_menu"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.shuhart.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:sv_stepLineWidth="1dp"
                app:sv_stepPadding="4dp"
                app:sv_doneCircleRadius="12dp"
                app:sv_selectedCircleRadius="12dp"
                app:sv_stepViewStyle="@style/StepView"
                app:sv_stepNumberTextSize="12sp"
                app:sv_animationType="All"
                app:sv_stepsNumber="3"
                style="@style/StepView"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/first_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/enter_firts_xyz_and_throw_angle"
                        android:textSize="21sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_x_coord_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/x_coord"
                        app:hintAnimationEnabled="true"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:counterEnabled="true"
                        app:counterMaxLength="12"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_x_coord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_z_coord_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/z_coord"
                        app:hintAnimationEnabled="true"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:counterEnabled="true"
                        app:counterMaxLength="12"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_z_coord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_throw_angle_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/throw_angle"
                        app:hintAnimationEnabled="true"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:counterEnabled="true"
                        app:counterMaxLength="6"
                        app:helperTextEnabled="true"
                        app:helperText="@string/to"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_throw_angle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/first_step_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        android:text="@string/next_step"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_baseline_navigate_next_24"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.ElevatedButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/next_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/enter_second_xyz_and_throw_angle"
                        android:textSize="21sp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/second_x_coord_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/x_coord"
                        app:hintAnimationEnabled="true"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:counterEnabled="true"
                        app:counterMaxLength="12"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/second_x_coord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/second_z_coord_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/z_coord"
                        app:hintAnimationEnabled="true"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:counterEnabled="true"
                        app:counterMaxLength="12"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/second_z_coord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/second_throw_angle_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:paddingHorizontal="8dp"
                        android:hint="@string/throw_angle"
                        app:hintAnimationEnabled="true"
                        app:errorEnabled="true"
                        app:endIconMode="clear_text"
                        app:counterEnabled="true"
                        app:counterMaxLength="6"
                        app:helperTextEnabled="true"
                        app:helperText="@string/to"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/second_throw_angle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:digits="0123456789.-"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/second_step_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:padding="16dp"
                        android:text="@string/calculate_coordinates"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_baseline_calculate_24"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.ElevatedButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/finish_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/eye_of_ender_says"
                        android:textSize="21sp"/>

                    <TextView
                        android:id="@+id/portal_coords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="4dp"
                        android:text="X: 0 Z: 0"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/finish_step_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="16dp"
                        android:text="@string/again"
                        android:textSize="18sp"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_baseline_refresh_24"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.ElevatedButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:text="@string/guide"
        android:textAllCaps="false"
        app:icon="@drawable/ic_baseline_article_24"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>