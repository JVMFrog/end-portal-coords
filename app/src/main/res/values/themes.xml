<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EndPortalCoords" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff6750a4</item>
        <item name="colorPrimaryVariant">#ff6750a4</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#ffeaddff</item>
        <item name="colorOnPrimaryContainer">#ff21005d</item>
        <item name="colorPrimaryInverse">#ffd0bcff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff625b71</item>
        <item name="colorSecondaryVariant">#ff625b71</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">#ffe8def8</item>
        <item name="colorOnSecondaryContainer">#ff1d192b</item>
        <!-- Tertiary. -->
        <item name="colorTertiary">#ff7d5260</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">#ffffd8e4</item>
        <item name="colorOnTertiaryContainer">#ff31111d</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">#ffb3261e</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">#fff9dedc</item>
        <item name="colorOnErrorContainer">#ff410e0b</item>
        <item name="colorOutline">#ff79747e</item>
        <item name="android:colorBackground">#fffffbfe</item>
        <item name="colorOnBackground">#ff1c1b1f</item>
        <item name="colorSurface">#fffffbfe</item>
        <item name="colorOnSurface">#ff1c1b1f</item>
        <item name="colorSurfaceVariant">#ffe7e0ec</item>
        <item name="colorOnSurfaceVariant">#ff49454f</item>
        <item name="colorSurfaceInverse">#ff313033</item>
        <item name="colorOnSurfaceInverse">#fff4eff4</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.EndPortalCoords">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="NextStepView" parent="Theme.EndPortalCoords">
        <item name="sv_selectedCircleColor">#ffeaddff</item>
        <item name="sv_selectedTextColor">#ff1d192b</item>
        <item name="sv_nextTextColor">#ff49454f</item>
        <item name="sv_nextStepCircleColor">#ff49454f</item>
        <item name="sv_nextStepLineColor">#ff49454f</item>
        <item name="sv_doneCircleColor">#ffeaddff</item>
        <item name="sv_doneTextColor">#ff1d192b</item>
        <item name="sv_doneStepLineColor">#ffeaddff</item>
        <item name="sv_doneStepMarkColor">#ff1d192b</item>
        <item name="sv_selectedStepNumberColor">#ffeaddff</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_x512</item>
        <item name="postSplashScreenTheme">@style/Theme.EndPortalCoords</item>
    </style>
</resources>